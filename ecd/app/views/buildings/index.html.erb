<h1>Listing buildings</h1>

<table>
  <tr>
    <th>Building</th>
    <th>Building name</th>
    <th>Building abbrv</th>
    <th>Building type</th>
  </tr>

<% @buildings.each do |building| %>
  <tr>
   
    <td><%=h building.building_name %></td>
    <td><%=h building.building_abbrv %></td>
    <td><%=h building.building_type_id %></td>
    <td><%= link_to 'Show', building %></td>
    <td><%= link_to 'Edit', edit_building_path(building) %></td>
    <td><%= link_to 'Destroy', building, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

