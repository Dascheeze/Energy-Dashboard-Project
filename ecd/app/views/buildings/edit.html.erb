	<% form_for(@building) do |f| %>
	<%= f.error_messages %>
	
	<p>
		<%= f.label :building_name %><br />
		<%= f.text_field :building_name %>
	</p>
	<p>
		<%= f.label :building_abbrv %><br />
		<%= f.text_field :building_abbrv %>
	</p>	
